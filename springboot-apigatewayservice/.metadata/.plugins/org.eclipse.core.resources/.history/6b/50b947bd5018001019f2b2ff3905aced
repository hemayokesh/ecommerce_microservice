server:
  port: 8080

spring:
  application:
    name: api-gateway
  main:
    web-application-type: reactive

  cloud:
    gateway:
      routes:
        - id: product-service
          uri: lb://springbootproduct
          predicates:
            - Path=/api/product/**
        - id: inventory-service
          uri: lb://springbootinventory
          predicates:
            - Path=/api/inventory/**
    discovery:
      locator:
        enabled: true
        lower-case-service-id: true

eureka:
  client:
    service-url:
      defaultZone: http://localhost:8761/eureka
